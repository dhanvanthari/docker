<section class="interactive__content space--60-0">
    <ul class="tonmacron__steps">
        <li class="active"></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <div class="interactive__banner__form-container l__wrapper--500">
        <div class="interactive__banner__form">
            {{ form_start(interactive_form) }}
            <h4 class="b__nudge--bottom text--medium text--center">
                Quel est le profil de votre proche ?
            </h4>

            <div class="form__row">
                {{ form_widget(interactive_form.friendGender, { attr: { class: 'form--full' } }) }}
                {{ form_errors(interactive_form.friendGender) }}
            </div>

            <div class="form__row">
                {{ form_label(interactive_form.friendFirstName) }}
                {{ form_errors(interactive_form.friendFirstName) }}
                {{ form_widget(interactive_form.friendFirstName, { attr: { class: 'form--full' } }) }}
            </div>

            <div class="form__row">
                {{ form_label(interactive_form.friendAge) }}
                {{ form_errors(interactive_form.friendAge) }}
                {{ form_widget(interactive_form.friendAge, { attr: { class: 'form--full' } }) }}
            </div>

            <div class="text--center b__nudge--top-large">
                {{ form_widget(interactive_form.fill_info, {attr: {class: 'btn btn--blue'}}) }}
            </div>

            {{ form_end(interactive_form) }}
        </div>
    </div>
</section>
