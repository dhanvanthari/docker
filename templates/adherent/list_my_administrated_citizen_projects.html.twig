{% if administrated_citizen_projects|length > 1 %}
    <div class="nav-dropdown">
        <i class="fa fa-caret-down" aria-hidden="true"></i>
        <i class="fa fa-caret-up" aria-hidden="true"></i>
        <ul class="list__links">
            <li><a href="#">{{ 'my_citizen_projects'|trans }}</a></li>
        </ul>
        <div class="nav-dropdown__menu nav-dropdown__black">
            <ul class="list__links">
                {% for citizen_project in administrated_citizen_projects %}
                    <li>
                        <a href="{{ path('app_citizen_project_show', { slug: citizen_project.slug }) }}"
                           title="{{ citizen_project.nameWithDistrict }}">
                            {{- citizen_project.nameWithDistrict -}}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% elseif(administrated_citizen_projects) %}
    {% set citizen_project = administrated_citizen_projects|first %}
    <a href="{{ path('app_citizen_project_show', { slug: citizen_project.slug }) }}"
       title="{{ citizen_project.nameWithDistrict }}">
        {{- citizen_project.nameWithDistrict -}}
    </a>
{% endif %}
