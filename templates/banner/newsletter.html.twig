<div class="newsletter__banner l__hide--on-tablet" id="header-banner" style="display: none;">
    <div class="l__wrapper l__row l__row--h-stretch space--30-0">
        <div class="text--large text--bold text--limited-extra">
            Je m’abonne<br />
            à <span class="text--on-white">la newsletter</span> !
        </div>
        <div class="l__row l__row--wrap">
            <form method="post" action="{{ path('newsletter_subscription') }}" name="app_newsletter_banner">
                <input type="email"
                       id="app_newsletter_subscription_email"
                       name="app_newsletter_subscription[email]"
                       required="required"
                       aria-label="Entrez votre adresse email"
                       title="Adresse email"
                       placeholder="Adresse email"
                       class="form__email form form__field form__field--no-border" />

                <input type="text"
                       id="app_newsletter_subscription_postalCode"
                       name="app_newsletter_subscription[postalCode]"
                       aria-label="Entrez votre code postal"
                       title="Code postal"
                       placeholder="Code postal"
                       class="form__zipcode form form__field form__field--no-border" />

                <button title="OK" type="submit" class="btn btn--no-border btn--black">OK</button>
            </form>

            <a href="javascript:void(0)" class="btn__icon btn__icon--dark newsletter__banner__btn" id="header-banner-close-btn">
                {{ include('components/close.html.twig') }}
            </a>
        </div>
    </div>
</div>
