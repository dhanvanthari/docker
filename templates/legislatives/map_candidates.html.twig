{% extends 'legislatives/layout.html.twig' %}

{% block page_title 'La carte' %}
{% block canonical_url url('legislatives_map') %}

{% block stylesheets %}
    <style type="text/css">
        body {
            height: 100vh;
            justify-content: flex-start;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}"></script>
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runLegislativesCandidatesMap();
        });
    </script>
{% endblock %}

{% block content__outer %}
    <main class="legislatives__map">
        <header class="l__wrapper text--center b__nudge--bottom">
            <h1 class="text--large text--pink">
                La carte des député(e)s <em>La République En Marche !</em>
            </h1>
        </header>

        <div id="map" style="height: 100%; width: 100%;"></div>
    </main>
{% endblock %}
