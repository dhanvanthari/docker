{% extends 'referent/_layout.html.twig' %}

{% block javascripts %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runManagedList(
                [
                    {
                        key: 'name',
                        name: 'Nom',
                        link: true,
                        targetBlank: true,
                    },
                    {
                        key: 'postalCode',
                        name: 'Code postal',
                        style: {
                            width: 175
                        }
                    },
                    {
                        key: 'members',
                        name: 'Membres',
                        className: 'datagrid__table__col--hide-mobile',
                        style: {
                            width: 100
                        }
                    }
                ],
                {{ managedGroupsJson|raw }}
            );
        });
    </script>
{% endblock %}

{% block referent_content %}
    <div class="datagrid__pre-table b__nudge--bottom-larger">
        <h3>{{ title }}</h3>
    </div>

    <div id="datagrid"></div>
{% endblock %}
