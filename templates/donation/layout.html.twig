{% extends 'base.html.twig' %}

{% block page_title 'Je donne' %}
{% block meta_description 'Si la démocratie n\'a pas de prix, elle a un coût! Aidez-nous à faire gagner vos idées' %}
{% block canonical_url url('donation_index') %}

{% block open_graph_image (homepage_url ~ asset('images/donation-sharer.jpg'))|raw %}

{% block stylesheets %}
    <style type="text/css">
        header,
        footer {
            display: none;
        }
        footer.footer--slim {
            display: initial;
        }
        body {
            background-color: #1D5FD1;
        }
    </style>
{% endblock %}

{% block banner '' %}
{% block footer '' %}

{% block content %}

    <video class="donation__video" src="https://storage.googleapis.com/en-marche-prod/static/videos/donation.mp4" autoplay muted loop></video>
    <div class="donation__video--overlay">
    </div>
    <div class="donation">
        <div>
            <section class="donation__header l__wrapper l__row l__row--h-stretch list__links--nav">
                <h1><a href="{{ path('homepage') }}" class="link--no-decor">EM!</a></h1>
                <div class="text--uppercase"><i class="fa fa-lock text--medium-small"></i> Page Sécurisée</div>
            </section>

            <section class="donation__content l__wrapper l__row space--60-0">
                <div class="donation__form">
                    {% block donation_content %}{% endblock %}
                </div>
            </section>
        </div>
        {{ include('components/footer--slim.html.twig') }}
    </div>

{% endblock %}
