{% extends 'base.html.twig' %}

{% block page_title 'Assesseur(e)' %}
{% block canonical_url url('app_assessor_request') %}
{% block meta_description "Proposez-vous en tant qu'assesseur(e)" %}

{% block banner '' %}
{% block header '' %}
{% block footer '' %}

{% block content %}
    <main class="assessor">
        <div class="assessor__upper">
            <section class="assessor__header--outer l__row l__row--h-stretch text--center">
                <div class="l__wrapper l__row space--30-0">
                    <a href="{{ path('homepage') }}" class="text--logo link--no-decor">EM!</a>
                </div>
                <div class="assessor__header--inner l__wrapper--medium">
                    <h1 class="text--larger text--large">
                        Proposez-vous en tant qu'<span class="text--on-blue-night">assesseur(e)</span>
                    </h1>
                    {% block subtitle %}
                        <h2 class="text--medium b__nudge--top text--gray">
                            Les élections européennes ont lieu le 26 mai 2019 en France.
                        </h2>
                    {% endblock %}
                </div>
            </section>

            <section>
                {% block assessor_content %}{% endblock %}
            </section>
        </div>
    </main>
{% endblock %}
